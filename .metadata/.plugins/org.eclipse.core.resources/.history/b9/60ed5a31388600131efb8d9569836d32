package com.hackrice14.feedjulia;

import com.hackrice14.feedjulia.brain.SurveyResponse;

import android.os.Bundle;
import android.app.Activity;
import android.content.Intent;
import android.view.Menu;
import android.view.View;
import android.widget.Button;
import android.widget.Spinner;

public class Survey extends Activity {
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_survey);
		
		final Intent intent = getIntent();
		
		final Button another = (Button) findViewById(R.id.moreSurvey);
		another.setOnClickListener(new View.OnClickListener() {
            public void onClick(View v) {
            	if (Integer.parseInt(intent.getStringExtra("surveyNum")) == 0) {
            		SurveyResponse[] responses = new SurveyResponse[Integer.parseInt(intent.getStringExtra("NumPeople"))];
            		SurveyResponse current = new SurveyResponse();
            		current.setAnswer("vegetarian", convertString(((Spinner) findViewById(R.id.vegChoices)).getSelectedItem().toString()));
            		current.setAnswer("spicy", convertString(((Spinner) findViewById(R.id.SpicyChoices)).getSelectedItem().toString())););
            		current.setAnswer("light", convertString(((Spinner) findViewById(R.id.LightChoices)).getSelectedItem().toString()));
            		current.setAnswer("fish", convertString(((Spinner) findViewById(R.id.FishChoices)).getSelectedItem().toString()));
            		current.setAnswer("carnivorous", convertString(((Spinner) findViewById(R.id.MeatChoices)).getSelectedItem().toString()));
            		current.setAnswer("soup", convertString(((Spinner) findViewById(R.id.SoupChoices)).getSelectedItem().toString()));
            		current.setAnswer("asian", convertString(((Spinner) findViewById(R.id.AsianChoices)).getSelectedItem().toString()));
            		current.setAnswer("warm", );
            		current.setAnswer("cold", );
            		
            	}
            	SurveyResponse 
            	Intent group = new Intent(Survey.this, Survey.class);
            	startActivity(group);
            }
        });
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.survey, menu);
		return true;
	}

	private double convertString(String choice) {
		if (choice.equals("No")) {
			return -1;
		} else if (choice.equals("Neutral")) {
			return 0;
		} else {
			return 1;
		}
	}

}
